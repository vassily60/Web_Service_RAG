# General Configuration
SECRET_KEY=your_secret_key_here  # This will be auto-generated if not set

# AWS Cognito Configuration (Required)
AWS_REGION=your_aws_region  # e.g., us-east-1, us-west-2
AWS_COGNITO_USER_POOL_ID=your_user_pool_id  # Format: region_string
AWS_COGNITO_DOMAIN=your_cognito_domain  # Your Cognito domain prefix or full URL
AWS_COGNITO_USER_POOL_CLIENT_ID=your_client_id
AWS_COGNITO_USER_POOL_CLIENT_SECRET=your_client_secret
AWS_COGNITO_REDIRECT_URL=your_redirect_url  # e.g., https://your-domain/postlogin
AWS_COGNITO_LOGOUT_URL=your_logout_url  # e.g., https://your-domain/postlogout

# BI Dashboard Configuration (Optional)
SUPERSET_URL=  # Default value, change if needed

# API Configuration (Optional)
API_KEY=your_api_key
API_ENDPOINT_ROOT=your_api_endpoint  # The root URL of your API
API_STAGE=dev  # API stage (dev, prod, etc.)

# Local Debug Configuration (Optional)
LOCAL_DEBUG=False  # Set to True to enable debug mode
LOCAL_DEBUG_PORT=5001  # Default port for local debugging

# Optional Cognito Configuration
# Uncomment and set these if needed
# AWS_COGNITO_COOKIE_AGE_SECONDS=3600
# AWS_COGNITO_EXPIRATION_LEEWAY=60
# AWS_COGNITO_REFRESH_FLOW_ENABLED=True
# AWS_COGNITO_REFRESH_COOKIE_ENCRYPTED=True
